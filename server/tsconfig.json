{
    "compilerOptions": {
        "module": "commonjs",
        "moduleResolution": "node",
        "target": "es6",
        "baseUrl": ".",
        "resolveJsonModule": true,
        "esModuleInterop": true,
        "outDir": "dist",
        "noImplicitAny": true,
        "typeRoots": [
            "./src/types",
            "./node_modules/@types"
        ],
        "paths": {
            "*": [
                "node_modules/*",
                "src/*"
            ]
        }
    },
    "include": [
        "src/**/*",
        "src/**/*.json"
    ]
}